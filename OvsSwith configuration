sudo ovs-vsctl show
sudo ovs-vsctl add-br myswitch	#to creat the switch
sudo ifconfig myswitch up
sudo ovs-vsctl del-br myswitch  #to remove the switch
sudo ovs-vsctl add-port myswitch eth0

route -n #to check the kernel ip routing table

## to add tap interfaces ##

ip tuntap add mode tap vport1
ip tuntap add mode tap vport2

sudo ifconfig vport1 up
sudo ifconfig vport2 up

## too add these vports to the VSwitch

sudo ovs-vsctl add-port myswitch vport1 -- add-port myswitch vport2


################ to configuar ip address manually in a linux machine  #########

ifconfig -a
sudo ifconfig eth0 X.X.X.X netmask 255.255.255.0
## for gateway
sudo route add default gw X.X.X.X eth0

sudo /etc/init.d/networking restart